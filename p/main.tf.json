{
  "terraform": {
    "required_providers": {
      "aws": {
        "version": "~> 3.60.0",
        "source": "aws"
      }
    }
  },
  "provider": {
    "aws": [
      {
        "region": "us-west-1"
      }
    ]
  },
  "data": {
    "aws_ami": {
      "lookup": {
        "most_recent": true,
        "owners": ["099720109477"],
        "filter": [
          {
            "name": "name",
            "values": ["ubuntu/images/hvm-ssd/ubuntu-focal-*server-*"]
          },
          {
            "name": "root-device-type",
            "values": ["ebs"]
          },
          {
            "name": "virtualization-type",
            "values": ["hvm"]
          }
        ]
      }
    }
  },
  "resource": {
    "aws_instance": {
      "hello": {
        "ami": "${data.aws_ami.lookup.image_id}",
        "instance_type": "t2.nano"
      }
    }
  }
}
