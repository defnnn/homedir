#!/usr/bin/env bash

function main {
  set -efu

  local cfg="$(mktemp -t XXXXXXXXX)"

  trap "rm -f $cfg" EXIT

  cp "$HOME/.kube/config" "${cfg}"

  export KUBECONFIG="${cfg}"
  ktx k3d-kind >/dev/null

  case "${1:-}" in
    all)
      k get --all-namespaces $(k api-resources --verbs=list --namespaced -o name | grep -v events | xargs | sed 's# #,#g')
      ;;
    k*|helm|kustomize|linkerd|glooctl|bash|*make|argo*|cilium*|hubble*|stern|tilt)
      "$@"
      ;;
    n*)
      "$@"
      ;;
    c)
      shift
      cilium "$@"
      ;;
    cm)
      shift
      cilium clustermesh "$@"
      ;;
    vm)
      shift
      cilium clustermesh vm "$@"
      ;;
    e|exec)
      shift
      "$@"
      ;;
    9|n)
      shift
      k9s "$@"
      ;;
    nn)
      shift
      k9s -n "$@"
      ;;
    "")
      k9s
      ;;
    *)
      k "$@"
      ;;
  esac
}

main "$@"
