#!/usr/bin/env bash

function main {
  for n in {0,1,2,3}; do
    ip="169.254.32.${n}"
    case "$(uname -s)" in
      Linux)
        sudo ip link add dummy${n} type dummy; ip addr add "${ip}/32" dev dummy${n}; ip link set dev dummy${n} up
        ;;
      Darwin)
        sudo ifconfig lo0 alias "${ip}" netmask 255.255.255.255
        ;;
    esac
  done
}

main "$@"
